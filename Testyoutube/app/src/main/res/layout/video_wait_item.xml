<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff3ea"
    android:gravity="right"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/player_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#505050"
        android:lines="1"
        android:text="item"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"/>
    <Button
        android:id="@+id/bt_player_tofirst"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:text="@string/bt_prio_item"
        android:textSize="18sp"
        android:textColor="#000"
        android:background="@drawable/selector_item_video_button_prio"
        android:layout_gravity="center_vertical"
        />
    <Button
        android:id="@+id/bt_player_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:text="@string/bt_del_item"
        android:textSize="18sp"
        android:textColor="#000"
        android:background="@drawable/selector_item_video_button_del"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>