<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/selector_item_video_search"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_marginLeft="5dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        />
    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/bt_choose_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/bt_choose"
        android:textSize="18sp"
        android:textColor="#000"
        android:background="@drawable/selector_item_video_button_choose"
        android:layout_gravity="center_vertical"
        />
    <Button
        android:id="@+id/bt_save_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/bt_save"
        android:textSize="18sp"
        android:textColor="#000"
        android:background="@drawable/selector_item_video_button_edit"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>